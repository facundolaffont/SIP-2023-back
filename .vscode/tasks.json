{
	"version": "2.0.0",
	"tasks": [

		// Elimina base de datos.
		{
			"label": "Eliminar base de datos",
			"type": "shell",
			"command": "docker compose down"
		},

		// Reinicializa y levanta la base de datos.
		{
			"label": "Reinicializar y levantar base de datos",
			"type": "shell",
			"command": "docker compose up",
			"dependsOn": [
				"Eliminar base de datos"
			]
		},

		{
			"label": "Correr backend",
			"id": "SIP-compile-start",
			"type": "gradle",
			"script": "bootRun",
			"description": "Compila y ejecuta el proyecto del backend.",
			"group": "build",
			"project": "spgda",
			"buildFile": "${workspaceRoot}/build.gradle",
			"rootProject": "spgda",
			"projectFolder": "${workspaceRoot}",
			"workspaceFolder": "${workspaceRoot}",
			"args": "",
			"javaDebug": false,
			"problemMatcher": [
				"$gradle"
			]
		}

	]
}